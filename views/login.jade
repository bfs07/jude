doctype html
html
    head
        meta(charset='utf-8')
        title
        link(rel='stylesheet', href='/stylesheets/main.css')
        link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        meta(name='viewport', content='width=device-width, initial-scale=1')
    body.login-page
        main
            .section
            .container.row
                .z-depth-1.col.card-panel.hoverable(style='display: inline-block; padding: 32px 48px 20px 48px')
                    center
                        h5.indigo-text Choose your contest and log in
                        .section
                        img.responsive-img(src='/images/jude.jpg')

                    form.default-form(action='', method='POST')
                        .input-field.col.s12
                            input#handle.validate(type='text', name='handle')
                            label(for='handle', data-error='invalid Email') Username
                        .input-field.col.s12
                            input#password.validate(type='password', name='password')
                            label(for='password') Password
                        .input-field.col.s12
                            select#contest(name='contest')
                                each contest in contests
                                    option(value=contest._id) #{contest.name}
                            label(for='contest') Contest

                        center
                            button.btn.waves-effect.waves-light(type='submit', name='action') Login
                            p= error[0]

        script(src='https://code.jquery.com/jquery-3.1.0.min.js', integrity='sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s=', crossorigin='anonymous')
        script(src='/js/materialize.js')
        script(type='text/javascript').
            $(document).ready(function () {
                $('select').material_select();
            });
